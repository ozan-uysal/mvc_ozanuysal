@model List<ProductModel>



@if (Model.Count == 0)
{
    @* <div class="alert alert-danger col-md-4 mb-2">Henüz Ürün Eklenmedi!</div> *@
}
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Adı</td>
            <td>Fiyatı</td>
            <td>Durumu</td>
            <th>Eklenme</th>
            <th>Güncellenme</th>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @if (product.IsActive)
                    {
                        <span class="badge bg-success text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Pasif</span>
                    }


                </td>
                <td>@product.Created</td>
                <td>@product.Updated</td>
                <td>
                    <a asp-action="Update" asp-controller="Product" class="btn btn-primary btn-sm" asp-route-id="@product.Id">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Product" class="btn btn-danger btn-sm" asp-route-id="@product.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

